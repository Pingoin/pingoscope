{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["ES2020"],
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "../types/*"]
    },
    "typeRoots": ["./node_modules/@types", "../types", "./src/*"]
  },
  "typedocOptions": {
    "entryPoints": ["src"],
    "out": "docs"
  },

  "include": ["./src/", "../types"]
}
